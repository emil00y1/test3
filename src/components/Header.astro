  <div class="navright">
    <div class="bargemenu">
      <div class="bar"></div>
    </div>
    <nav>
      <ul class="navmenu">
        <li class="homenav"><a class={home} href="/">KIDDUSH</a></li>
        <li><a class={shop} href="/shop">SHOP</a></li>
        <li><a class={archive} href="/archive">BEER ARCHIVE</a></li>
        <li><a class={events} href="/events">EVENTS</a></li>
