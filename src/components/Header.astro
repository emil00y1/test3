<style>
  .homenav {
    display: none;
  }

  header {
    z-index: 1;
  }
  ul {
    list-style: none;
    display: flex;
    gap: 50px;
    margin: auto 0;
  }

  a {
    text-decoration: none;
    color: var(--kiddushblack);
    font-family: Montserrat, sans-serif;

    font-size: 20px;
    font-weight: 500;
  }

  a:hover {
    color: var(--primary);
    transition: 0.2s ease-in-out;
  }

  svg {
    fill: var(--kiddushblack);
    width: 25px;
  }
  svg:hover {
    fill: var(--primary);
    transition: 0.2s ease-in-out;
  }

  .logo {
    width: 60px;
  }

  .cart,
  .search {
  }
  .icons {
    display: flex;
    align-items: center;
    gap: 50px;
  }

  .navright {
    display: flex;
    gap: 50px;
  }

  header {
    display: flex;
    justify-content: space-between;
    padding: 16px 40px;
    background-color: var(--background);
    position: fixed;
    width: 100%;
  }
  nav {
    display: flex;
    gap: 50px;
    text-align: center;
    margin: auto 0;
  }
  .active {
    color: var(--primary);
  }
  .hamburger {
    display: none;
    cursor: pointer;
  }
  /**************************************************************************************************************/
  @media (max-width: 900px) {
    .active {
      color: var(--secondary);
    }
    .bargemenu {
      width: 30px;
      height: 20px;
      cursor: pointer;
      position: relative;
      margin: auto 0;
      z-index: 1;
    }

    .bargemenu .bar {
      width: 100%;
      height: 3px;
      background-color: var(--kiddushblack);
      position: absolute;
      top: 50%;
      left: 0;
      transition: transform 0.3s linear;
      border-radius: 10px;
    }

    .bargemenu .bar::before,
    .bargemenu .bar::after {
      content: "";
      position: absolute;
      width: 100%;
      height: 3px;
      background-color: var(--kiddushblack);
      transition: transform 0.3s linear;
      border-radius: 10px;
    }

    .bargemenu .bar::before {
      transform: translateY(-12px);
    }

    .bargemenu .bar::after {
      transform: translateY(12px);
    }

    .bargemenu.active .bar {
      transform: rotate(360deg);
      background-color: var(--background);
    }

    .bargemenu.active .bar::before {
      transform: translate(-8.6px, 5px) rotate(45deg) scale(0.5, 1);
      background-color: var(--background);
    }

    .bargemenu.active .bar::after {
      transform: translate(-8.6px, -5px) rotate(-45deg) scale(0.5, 1);
      background-color: var(--background);
    }

    .homenav {
      display: block;
    }

    .navmenu {
      flex-direction: column;
      color: var(--background);
      margin: auto;
    }
    nav {
      position: fixed;
      background-color: var(--primary);
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      display: none;
    }
    a {
      color: var(--background);

      font-size: 40px;
      font-weight: 700;
    }
    a:hover {
      color: var(--secondary);
    }
    nav.active {
      display: flex;
    }
  }
  /**************************************************************************************************************/
</style>
<script>
  const bargemenu = document.querySelector(".bargemenu");
  const nav = document.querySelector("nav");

  bargemenu.addEventListener("click", function () {
    this.classList.toggle("active");
    nav.classList.toggle("active");
  });
</script>
