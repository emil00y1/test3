---
const { text, type, href } = Astro.props;
---

<a class={type} href={href}>{text}</a>

<style>
  a {
    display: block;
    font-family: Montserrat, sans-serif;
    font-size: 22px;
    font-weight: 500;

    text-align: center;

    border-radius: 11px;
    padding: 4px 13px 4px 13px;
  }

  .cart {
    background-color: var(--primary);
    color: var(--background);
    width: fit-content;
    margin: 0 auto;
  }
  .cart:hover {
    background-color: var(--secondary);
  }

  .filter {
    font-size: 20px;
    color: var(--kiddushblack);
  }

  .filter_active {
    color: var(--primary);
  }


  .index{
    background: var(--primary);
    color: var(--background);
border-radius: 11px;
width: 237px;
height: 51px;
display: flex;
flex-direction: row;
justify-content: center;
align-items: center;
padding: 7px 24px;
gap: 10px;
margin: auto;
  }

  .extra_margin{
    margin: 30px auto 30px auto;
  }
</style>
